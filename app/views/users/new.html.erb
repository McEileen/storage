<!-- WE NEED TO USE THE DEVISE VIEWS FOR THE FORM -->


<div class="form-container">
  <h1>Sign Up</h1>
  <%= form_for @user do |f| %>
    <div class="form-group">
      <%= f.label :name, class: 'sr-only' %>
      <%= f.text_field :name, size: 40, autofocus: true, required: true, placeholder: 'Username'%>
    </div>
    <div class="form-group">
      <%= f.label :email, class: 'sr-only' %>
      <%= f.text_field :email, size: 40, required: true, placeholder: 'Email' %>
    </div>
    <div class="form-group">
      <%= f.label :password, class: 'sr-only' %>
      <%= f.password_field :password, size: 40, required: true, placeholder: 'Password' %>
    </div>
    <div class="form-group">
      <%= f.label :password_confirmation, class: 'sr-only' %>
      <%= f.password_field :password_confirmation, size: 40, required: true, placeholder: 'Confirm password' %>
    </div>
    <div class="form-group">
      <%= f.label :how_did_you_find_tweechable_?, class: 'sr-only' %>
      <%= f.text_field :how_found_tweechable, size: 40, required: true, placeholder: 'How did you find Tweechable?' %>
    </div>
      <%= f.submit "Sign Me Up!", class: 'btn btn-default' %>
  <% end %>
</div>
